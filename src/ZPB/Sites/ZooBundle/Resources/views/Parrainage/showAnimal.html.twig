{% extends "ZPBSitesZooBundle:Layouts:master.html.twig" %}
{% set active_section = "parrainage" %}
{% block headStyles %}
    {{ parent() }}
    <style>
        .two-column {
            -webkit-column-count: 2;
            -moz-column-count: 2;
            -ms-column-count: 2;
            -o-column-count: 2;
            column-count: 2;
            -webkit-column-gap: 15px;
            -moz-column-gap: 15px;
            -ms-column-gap: 15px;
            -o-column-gap: 15px;
            column-gap: 15px;
        }
    </style>
{% endblock %}
{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="thumbnail">
                    <img data-src="holder.js/100%x500" alt=""/>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9">

                <div class="jumbotron">
                    <h2>{{ animal.longName }}</h2>
                    {{ animal.shortDesc|raw }}
                </div>

                <div class="two-column">
                    <h4>Description</h4>
                    {{ animal.longDesc|raw }}
                    <h4>Identit√©</h4>
                    <p><strong>Date de naissance</strong> : {{ animal.birthdate|date("d-m-y") }}, {{ animal.birthPlace }}</p>

                    <p><strong>Age</strong> : {{ animal.age }}</p>

                    <p><strong>Sexe</strong> : {{ animal.sexe }}</p>

                    <h4>Histoire</h4>

                    {{ animal.history|raw }}
                </div>

                <div class="thumbnail">
                    <img data-src="holder.js/100%x300" alt=""/>
                </div>
            </div>
            <div class="col-md-3">
                <a href="#" class="btn btn-success btn-lg btn-block">Je parraine {{ animal.name }}</a>
                <hr/>
                <h3>{{ animal.species.longName }}</h3>
                <div class="thumbnail">
                    <img data-src="holder.js/100%x150" alt=""/>
                    <div class="caption">
                        <p class="text-center">en savoir plus sur <em>{{ animal.species.genus }}</em></p>
                    </div>
                </div>
                <a class="btn btn-success btn-block" href="#">{{ animal.species.longName }}</a>
            </div>
        </div>
    </div>
{% endblock %}

{% block footScripts %}
    {{ parent() }}
    <script src="/zoo/js/vendor/dev/holder.js"></script>
{% endblock %}
