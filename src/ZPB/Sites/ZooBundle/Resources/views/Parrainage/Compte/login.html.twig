{% extends "ZPBSitesZooBundle:Layouts:master.html.twig" %}
{% set active_section = "parrainage" %}
{% block main %}
    {#{% if error %}
        <div>{{ error.message }}</div>
    {% endif %}#}
<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <form action="{{ path('zpb_sites_zoo_parrainage_login_check') }}" method="post">
                <div class="form-group">
                <label for="username">Pseudo ou adresse email</label>
                    <input type="text" id="username" name="_username" value="{#{{ last_username }}#}" class="form-control"/>

                </div>
                <div class="form-group">
                <label for="password">Mot de passe</label>
                    <input type="password" id="password" name="_password" class="form-control"/>

                </div>
                <input type="hidden" name="_target_path" value="/parrainage/mon-compte" />

                <div class="form-group">
                <button type="submit" class="btn btn-primary">login</button>

                </div>
                {#
                    If you want to control the URL the user
                    is redirected to on success (more details below)#}


            </form>

        </div>
        <div class="col-md-4"></div>
    </div>
</div>

{% endblock %}




