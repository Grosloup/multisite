        <div class="row">

            <div class="col-md-3">
                <ul class="nav">
                    <li {% if subsection == "account" %}class="active"{% endif %}><a href="{{ path("zpb_sites_zoo_parrainage_my_account") }}">Mon compte</a></li>
                    <li {% if subsection == "animals" %}class="active"{% endif %}><a href="{{ path("zpb_sites_zoo_parrainage_my_account_animals") }}">Mes parrainages</a></li>
                </ul>
            </div>
            <div class="col-md-9">
                {% block content %}{% endblock %}
            </div>
        </div>
    </div>
{% endblock %}




