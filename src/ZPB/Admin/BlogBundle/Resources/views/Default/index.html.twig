{% extends "ZPBAdminBlogBundle:Layouts:master.html.twig" %}


{% set active_ss_menu = "home" %}

{% block content %}
    {% if categories|length < 1 %}
        <div class="row">
            <div class="alert alert-danger">
                <strong>Attention ! </strong> Il n'y a pas de catégories enregistrées pour les articles. Vous devez en créer au moins une pour pouvoir commencer vos rédactions.
                <a href="{{ path("zpb_admin_blog_category_new") }}"><i class="fa fa-hand-o-right"></i> Ajouter une catégorie.</a>
            </div>
        </div>
    {% else %}
        <div class="row">
            <div class="col-md-12">
                <div class="page-header">
                    <h2>Articles <small>liste</small></h2>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <h3>Brouillons</h3>
            </div>
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>date de création</th>
                            <th>Titre</th>
                            <th>Catégorie</th>
                            <th>Mots-clés</th>
                            <th>Editer</th>
                            <th>Publier</th>
                            <th>Mettre à la corbeille</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% if drafts|length < 1 %}
                            <tr class="warning">
                                <td colspan="8">Il n'y a pas d'articles en cours d'écriture. <a href="{# TODO #}"><i class="fa fa-hand-o-right"></i> Ecrire</a></td>
                            </tr>
                        {% else %}
                            {% for draft in drafts %}
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                        
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <h3>Articles publiés</h3>
            </div>
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Date de publication</th>
                            <th>Nbre de vue</th>
                            <th>Titre</th>
                            <th>Catégorie</th>
                            <th>Mots-clés</th>
                            <th>"à la une" zoo</th>
                            <th>"à la une" B.Nature</th>
                            <th>Archiver</th>
                            <th>Editer</th>
                            <th>Mettre à la corbeille</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% if published|length < 1 %}
                            <tr class="warning">
                                <td colspan="11">Il n'y a pas d'articles publiés. <a href="{# TODO #}"><i class="fa fa-hand-o-right"></i> Ecrire</a></td>
                            </tr>
                        {% else %}
                            {% for pub in published %}
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            {% endfor %}
                        {% endif %}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    {% endif %}

{% endblock %}
