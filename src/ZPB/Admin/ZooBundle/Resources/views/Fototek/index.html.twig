{% extends "ZPBAdminZooBundle:Layouts:master.html.twig" %}
{% set active_ms_menu = "zoo_foto" %}
{% block title %}Photothèque - {{parent()}}{% endblock %}
{% set subtitle = "Photothèque" %}
{% set active_ss_menu = "all_img" %}
{% block sidebar %}{{ render(controller("ZPBAdminZooBundle:Navs:fototekSidebar", {active: active_ss_menu|default("home")})) }}{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <div class="h2">Images <small>Liste</small></div>
            </div>
        </div>
    </div>
    {% if numCats < 1 %}
        <div class="row">
            <div class="alert alert-danger">
                <strong>Attention ! </strong> Avant de pouvoir uploader des images, vous devez définir au moins une catégorie.
            </div>
        </div>
    {% endif %}

    <div class="row">
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                <tr>
                    <th>Id</th>
                </tr>
                </thead>
                <tbody>
                {% if images|length <1 %}
                    <tr class="warning">
                        <td colspan="5">Il n'y a aucune images enregistrées. <a href="{{ path("zpb_admin_zoo_fototek_image_new") }}">Upload <i class="fa fa-hand-o-right"></i></a></td>
                    </tr>
                {% else %}

                {% endif %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
